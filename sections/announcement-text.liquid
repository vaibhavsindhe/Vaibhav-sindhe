{%- style -%}
  .padding-{{ section.id }} {
    padding-top: {{ section.settings.mobile_padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .announcement-text-section {
    background:{{ section.settings.background_color }}
  }

  @media screen and (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% if section.settings.annoucement_text != blank %}
  <section class="announcement-text-section padding-{{ section.id }}">
    <div class="announcement-text">{{ section.settings.annoucement_text }}</div>
  </section>
{% endif %}
{% schema %}
{
  "name": "Announcement Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "annoucement_text",
      "label": "Announcement Text",
      "default":"Announcement Text"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Announcement Background Color"
    },
    {
      "type": "header",
      "content": "Padding Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "label": "Padding top (Mobile)",
      "default": 32,
      "min": 0,
      "max": 100,
      "step": 2
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "label": "Padding bottom (Mobile)",
      "default": 32,
      "min": 0,
      "max": 100,
      "step": 2
    }
  ],
  "presets": [
    {
      "name": "Announcement Text"
    }
  ]
}
{% endschema %}
