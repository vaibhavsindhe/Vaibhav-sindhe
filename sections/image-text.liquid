{%- style -%}
  .padding-{{ section.id }} {
    padding-top: {{ section.settings.mobile_padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{{ 'image-text.css' | asset_url | stylesheet_tag }}

<section class="padding-{{ section.id }} {% if section.settings.mobile_hide %} small-hide {% endif %}">
  <div class="image-text-section">
    {% if section.settings.heading != blank
      or section.settings.description != blank
      or section.settings.button_link != blank
    %}
      <div class="image-text-info">
        {% if section.settings.heading != blank %}
          <div class="image-text-heading">{{ section.settings.heading }}</div>
        {% endif %}
        {% if section.settings.description != blank %}
          <div class="image-text-description">{{ section.settings.description }}</div>
        {% endif %}
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{section.settings.button_link}}" class="image-text-button">
            <span>{{ section.settings.button_label }}</span>
            <span>{% render 'icon-arrow' %}</span>
          </a>
        {% endif %}
      </div>
    {% endif %}
    {% if section.settings.banner_image != blank %}
      <div class="image-text-banner-wrapper">
        <img class="image-text-banner" src="{{ section.settings.banner_image | image_url }}">
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{section.settings.button_link}}" class="image-text-button">
            <span>{{ section.settings.button_label }}</span>
            <span>{% render 'icon-arrow' %}</span>
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>
{% schema %}
{
  "name": "Image Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "BannerImage"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p></p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "mobile_hide",
      "label": "Disable Section For Mobile",
      "default": false,
    },
    {
      "type": "header",
      "content": "Padding Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "label": "Padding top (Mobile)",
      "default": 32,
      "min": 0,
      "max": 100,
      "step": 4
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "label": "Padding bottom (Mobile)",
      "default": 32,
      "min": 0,
      "max": 100,
      "step": 4
    }
  ],
  "presets": [
    {
      "name": "Image Text"
    }
  ]
}
{% endschema %}
